<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>@ViewBag.Title</title>
		@Styles.Render("~/Content/css")
		@Scripts.Render("~/bundles/modernizr")
	</head>
	<body>
		<section class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					@Html.ActionLink("Social Stream", "Index", "Home", null, new {@class = "navbar-brand"})
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li>@Html.ActionLink("Home", "Index", "Home")</li>
						<li>@Html.ActionLink("APIs", "APIs", "Home")</li>
						<li>@Html.ActionLink("Postman", "Postman", "Home")</li>
						<li>@Html.ActionLink("Code", "Code", "Home")</li>
						<li>@Html.ActionLink("Overview", "Overview", "Home")</li>
						<li>@Html.ActionLink("Stream", "Stream", "Home")</li>
					</ul>
				</div>
			</div>
		</section>
		<section class="container body-content">
			@RenderBody()
			<hr />
			<footer>
				<p>&copy; @DateTime.Now.Year - TWEEK</p>
			</footer>
		</section>
		@Scripts.Render("~/bundles/jquery")
		@Scripts.Render("~/bundles/bootstrap")
		@RenderSection("scripts", false)
	</body>
</html>